{
  "info": {
    "name": "Client API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Client",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"John Doe\", \"email\": \"john.doe@example.com\", \"phone\": \"1234567890\" }"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/clients",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "clients"]
        }
      }
    },
    {
      "name": "Get Client by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/api/v1/clients/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "clients", ":id"]
        }
      }
    },
    {
      "name": "Update Client",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Jane Doe\", \"email\": \"jane.doe@example.com\", \"phone\": \"0987654321\" }"
        },
        "url": {
          "raw": "http://localhost:3000/api/v1/clients/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "clients", ":id"]
        }
      }
    },
    {
      "name": "List Clients",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/api/v1/clients",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "v1", "clients"]
        }
      }
    }
  ]
}
